- title h(@album.title) + " - New Comment"

= form_for @comment do |f|
  = f.error_messages
  = f.hidden_field :posted, :value => Date.today.to_s
  = f.hidden_field :author, :value => @author
  = f.hidden_field :album_id, :value => @album.id
  %p
    = f.label :body
    %br
    = f.text_area :body
  %p
    = f.submit

= link_to "back to album page", :controller => 'albums', :action => 'show', :id => @album.id
